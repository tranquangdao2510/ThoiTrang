<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:padding="12dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Login" />

    <TextView
        android:id="@+id/new_user_txtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/login_btn"
        android:layout_alignRight="@id/login_btn"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:layout_marginLeft="190dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:hint="Don't have an Account?"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textColorHint="@color/colorLogo"
        android:textSize="15sp"
        />

    <EditText
        android:id="@+id/password_edTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/new_user_txtView"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_design"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textAllCaps="false"
        android:textColor="@color/colorLogo"
        android:textColorHint="@color/colorLogo"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/email_edTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/password_edTxt"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_design"
        android:hint="Email"
        android:padding="12dp"
        android:textAllCaps="false"
        android:textColor="@color/colorLogo"
        android:textColorHint="@color/colorLogo"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/email_edTxt"
        android:src="@drawable/logo_transparent"
        />

</RelativeLayout>